import click
from snakerunner.runner import SnakeRunner

hello = SnakeRunner(default_snakefile='examples/hello_world/Snakefile.hello', default_config='examples/hello_world/config.json')
hello.add_endpoint('hello', params={})
hello_world = SnakeRunner(default_snakefile='Snakefile', default_config='examples/hello_world/config.json')
hello_world.add_endpoint('hello-world_1', params={'sources': ['test'], 'params': {'say_hello': True }})

simple = SnakeRunner(default_snakefile='Snakefile', default_config='examples/simple/config.json')
simple.add_endpoint('run_simple', params={})

